mixin product(product)
    .col
        .card(style='width: 18rem;')
            img.card-img-top(src=product.thumbnail alt=product.title)
            .card-body
                h5.card-title=product.title + " - $" + product.price
                a.btn.btn-primary(href='/ver/productos/' + product.id)="Ver detalles"